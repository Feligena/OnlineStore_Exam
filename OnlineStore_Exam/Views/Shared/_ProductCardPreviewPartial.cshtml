@model Product

<div class="card mb-4 product-wap rounded-0">
    <div class="card rounded-0">
        <img class="card-img rounded-0 img-fluid" src="@Model.Images.First()">
        <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
            <ul class="list-unstyled">
                <li>
                    <a class="btn btn-success text-white" asp-controller="" asp-action="">
                        <i class="far fa-heart"></i>
                    </a>
                </li>
                <li>
                    <a class="btn btn-success text-white mt-2" asp-controller="" asp-action="">
                        <i class="far fa-eye"></i>
                    </a>
                </li>
                <li>
                    <a class="btn btn-success text-white mt-2" asp-controller="" asp-action="">
                        <i class="fas fa-cart-plus"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="card-body">
        <a href="shop-single.html" class="h3 text-decoration-none">@Model.Title</a>
        <p>@Model.Description</p>
        <p class="text-center mb-0">$@Model.Prise</p>
    </div>
</div>
